<div id="card-carousel" class="splide" aria-label="{{ i18n_aria.aria.slide[page.lang] }} {{ name[page.lang] }}">
    <div class="splide__track">
        <ul class="splide__list">
            {%- for photo in photos -%}
              <li class="splide__slide">
                <figure class="card-figure">
                  {% image_product photo, 'shadow card-image', i18n.alt_photo[page.lang] + ' - ' + name[page.lang], '(max-width: 769px) 365px, 750px' %}
                  <figcaption class="card-caption">{{ name[page.lang] }}</figcaption>
                </figure>
              </li>
            {%- endfor -%}
          </ul>      
    </div>

    <div id="card-thumbnails" class="card-thumbnails">
        {%- for photo in photos -%}
            <button class="card-thumbnail" aria-label="i18n_aria.aria.slide_thumb[page.lang]" aria-controls="card-carousel-slide0{{ loop.index }}">
                {% image_product photo, 'thumbs', i18n.alt_photo[page.lang] + ' - ' + name[page.lang], '65px' %}
            </button>
        {%- endfor -%}
    </div>
</div>
