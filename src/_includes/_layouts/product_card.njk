---
layout: _layouts/default.njk
include_slide_bundle: true
---

<section aria-labelledby="card-title">
    <article
        class="card-details product-infos"
        data-id="{{ id }}"
        data-title="{{ name }}"
        data-price="{{ price }}"
        data-image="photos[0]"
        data-link="{{ permalink }}"
    >
        {%- include 'carousel.njk' -%}
        <section class="card-info">
            <header>
                <h1 id="content-title" class="card-title">{{ name }}</h1>
            </header>
            <section class="card-description">
                <p>{{ description }}</p>
                <dl>
                    {% for key, value in options %}
                    <dt>
                        {{ key }}{% if page.lang == 'fr'%}&nbsp;{% endif
                        %}:&nbsp;
                    </dt>
                    <dd>{{ value }}</dd>
                    {% endfor %}
                </dl>
            </section>
            <footer class="card-footer">
                {% include 'price.njk' %} {% include 'button_add.njk' %}
            </footer>
        </section>
    </article>
</section>
