<style>
    /* Root Inherit Variables */
    :root {
        --cart-item-padding: 1rem;
        --cart-gap: 1.5rem;
        --cart-border-radius: 0.3rem;
    }

    /* Cart Container */
    #cart-content {
        display: grid;
        gap: var(--cart-gap);
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        margin-bottom: var(--gap-large);
    }

    /* Individual Cart Item Styling */
    .cart-item {
        display: grid;
        grid-template-rows: auto auto auto 1fr;
        padding: var(--cart-item-padding);
        background-color: var(--background-color);
        border: var(--border-thin);
        border-radius: var(--cart-border-radius);
        box-shadow: var(--card-shadow);
    }

    .cart-item .item-thumbnail {
        width: 100%;
        border-radius: var(--cart-border-radius);
        object-fit: cover;
        margin-bottom: var(--gap-small);
    }

    .cart-item .item-details {
        display: flex;
        flex-direction: column;
        gap: var(--gap-small);
    }

    .cart-item h3 {
        font-size: 1.2rem;
        color: var(--primary-color);
        margin: 0 0 var(--gap-small) 0;
    }

    .cart-item .item-qty {
        width: 4rem;
        padding: 0.3rem;
        border: var(--border-thin);
        border-radius: var(--cart-border-radius);
    }

    .cart-item .item-total-price {
        color: var(--hover-color);
        font-weight: bold;
        margin-top: var(--gap-small);
    }

    .cart-item .remove-from-cart {
        margin-top: var(--gap-small);
        background-color: var(--hover-color);
        color: var(--background-color);
        border: none;
        padding: 0.5rem 1rem;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    .cart-item .remove-from-cart:hover {
        background-color: #555; /* Une couleur un peu plus foncée pour indiquer l'effet de survol */
    }

    /* Ticket Section */
    #cart-ticket {
        margin-top: var(--gap-large);
        padding: var(--cart-item-padding);
        background-color: var(--secondary-bg);
        border: var(--border-thin);
        border-radius: var(--cart-border-radius);
        box-shadow: var(--card-shadow);
    }

    #cart-ticket h2 {
        font-size: 1.5rem;
        color: var(--primary-color);
        margin-bottom: var(--gap-large);
    }

    #shipping-country {
        width: 100%;
        padding: 0.5rem;
        margin-bottom: var(--gap-large);
        border: var(--border-thin);
        border-radius: var(--cart-border-radius);
    }

    .cart-summary {
        display: flex;
        justify-content: space-between;
        font-weight: bold;
        padding: 0.5rem 0;
        border-top: var(--border-thin);
    }

    .cart-summary span {
        color: var(--primary-color);
    }

    .total-amount {
        font-size: 1.6rem;
        color: var(--hover-color);
    }

    /* Responsive Design */
    @media (max-width: 768px) {
        #cart-content {
            grid-template-columns: 1fr;
        }

        .cart-item {
            text-align: center;
        }

        .cart-item .item-details {
            align-items: center;
        }
    }
</style>

<h1>Basket</h1>

<div id="cart-content">
    <!-- Les articles du panier seront chargés ici -->
</div>

<div id="cart-ticket">
    <h2>Ticket</h2>

    <label for="shipping-country">Pays de livraison :</label>
    <select id="shipping-country">
        <option value="FR" data-cost="5">
            France (5 € de frais de transport)
        </option>
        <option value="BE" data-cost="10">
            Belgique (10 € de frais de transport)
        </option>
        <option value="LU" data-cost="12">
            Luxembourg (12 € de frais de transport)
        </option>
        <!-- Ajoutez d'autres options de pays ici -->
    </select>

    <div id="cart-subtotal" class="cart-summary">
        <strong>Sous-total :</strong>
        <span class="subtotal-amount">0.00 €</span>
    </div>
    <div id="cart-shipping" class="cart-summary">
        <strong>Frais de transport :</strong>
        <span class="shipping-amount">5.00 €</span>
    </div>
    <div id="cart-total" class="cart-summary">
        <strong>Total :</strong> <span class="total-amount">0.00 €</span>
    </div>
</div>
