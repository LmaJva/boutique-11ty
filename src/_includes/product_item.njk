<article class="shadow product-item product-infos" data-id="{{ post.data.id }}">
    <header class="product-header">
        <h2 id="{{ post.data.name }}" class="product-title">
            {{ post.data.name }}
        </h2>
        <h3 class="product-subtitle">
            {{ post.data.mini_descr }}
        </h3>
    </header>
    <figure class="product-figure">
        {%- set thumbs_url = settings.dirs.thumbs + post.data.photos[0] -%}
        <img
            src="{{ thumbs_url | url }}"
            class="product-image"
            alt="{{ post.data.name }}"
        />
    </figure>
    <p class="product-description">{{ post.data.description | excerptFromDescription }}</p>
    {% set price = post.data.price %}
    {% set stock = post.data.stock %}
    {% include 'price_stock.njk' %}
    <footer class="product-footer">
        <a
            href="{{ post.data.permalink | customLocaleUrl(page.lang) | url }}"
            class="btn btn-details"
            aria-label="{{ i18n.card_detail[page.lang] }}"
            >{{ i18n.card_detail[page.lang] }}</a
        >
        {% include 'button_add.njk' %}
    </footer>
</article>
