---
layout: default.njk
---

<section aria-labelledby="card-title"></section>
    <article class="card-details">
        <figure class="card-figure">
            <img src="{{ settings.dirs.img_products | url }}{{ photos[0] }}" class="card-image" alt="{{ i18n.alt_photo[page.lang] }} - {{ name }}" />
            <figcaption class="card-caption">{{ name }}</figcaption>
        </figure>
        <section class="card-info">
            <header>
                <h1 id="content-title" class="card-title">{{ name }}</h1>
            </header>
            <section class="card-description">
                <p>{{ description }}</p>
                <dl>
                    {% for key, value in options %}
                        <dt>{{ key }}{% if page.lang == 'fr'%}&nbsp;{% endif %}:&nbsp;</dt>
                        <dd>{{ value }}</dd>
                    {% endfor %}
                </dl>
            </section>
            <footer class="card-footer">
                <h3 class="price" aria-label="{{ i18n.aria.product_price[page.lang] }}">{{ price }}</h3>
                <a href="#" class="btn btn-card"  aria-label="{{ i18n.add_to_cart_title[page.lang] }}">
                    {{ i18n.add_to_cart_title[page.lang] }}
                </a>
            </footer>
        </section>
    </article>
</section>
